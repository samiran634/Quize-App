    <script type="module">
        import * as THREE from 'three';
        import { FontLoader } from 'three/addons/loaders/FontLoader.js';
        import { TextGeometry } from 'three/addons/geometries/TextGeometry.js';
        import { EffectComposer } from 'three/addons/postprocessing/EffectComposer.js';
        import { RenderPass } from 'three/addons/postprocessing/RenderPass.js';
        import { UnrealBloomPass } from 'three/addons/postprocessing/UnrealBloomPass.js';
        import { RoomEnvironment } from 'three/addons/environments/RoomEnvironment.js';

        const scene = new THREE.Scene();
        scene.background = new THREE.Color(0x1a1a1a);
        scene.fog = new THREE.FogExp2(0x1a1a1a, 0.02);

        const camera = new THREE.PerspectiveCamera(45, window.innerWidth / window.innerHeight, 0.1, 1000);
        camera.position.set(-8, 6, 12);
        camera.lookAt(-1, 0, 0);

        const renderer = new THREE.WebGLRenderer({ antialias: true, powerPreference: "high-performance" });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        renderer.toneMapping = THREE.ACESFilmicToneMapping;
        renderer.toneMappingExposure = 1.0;
        document.getElementById('canvas-container').appendChild(renderer.domElement);

        const pmremGenerator = new THREE.PMREMGenerator(renderer);
        const roomEnvironment = new RoomEnvironment();
        const envMap = pmremGenerator.fromScene(roomEnvironment).texture;
        scene.environment = envMap;

        const composer = new EffectComposer(renderer);
        composer.addPass(new RenderPass(scene, camera));
        composer.addPass(new UnrealBloomPass(new THREE.Vector2(window.innerWidth, window.innerHeight), 0.4, 0.6, 0.88));

        const ambientLight = new THREE.AmbientLight(0x404040, 0.4);
        scene.add(ambientLight);

        const keyLight = new THREE.SpotLight(0xffd4a3, 150);
        keyLight.position.set(-12, 15, 10);
        keyLight.castShadow = true;
        keyLight.shadow.mapSize.width = 2048;
        keyLight.shadow.mapSize.height = 2048;
        keyLight.angle = Math.PI / 4.5;
        keyLight.penumbra = 0.6;
        keyLight.decay = 2;
        scene.add(keyLight);

        const fillLight = new THREE.SpotLight(0xa3c4ff, 60);
        fillLight.position.set(15, 8, 8);
        fillLight.angle = Math.PI / 5;
        fillLight.penumbra = 0.5;
        fillLight.decay = 2;
        scene.add(fillLight);

        const rimLight = new THREE.PointLight(0xffffff, 50, 30);
        rimLight.position.set(0, -5, -10);
        scene.add(rimLight);

        const wallGeometry = new THREE.BoxGeometry(40, 25, 4);
        const wallMaterial = new THREE.MeshPhysicalMaterial({
            color: 0x2a2a2a,
            metalness: 0.3,
            roughness: 0.7,
            clearcoat: 0.2,
            clearcoatRoughness: 0.4
        });
        const wall = new THREE.Mesh(wallGeometry, wallMaterial);
        wall.position.z = -10;
        wall.receiveShadow = true;
        scene.add(wall);

        const textMaterial = new THREE.MeshPhysicalMaterial({
            color: 0xf5f5f5,
            metalness: 0.2,
            roughness: 0.15,
            clearcoat: 0.8,
            clearcoatRoughness: 0.2,
            envMapIntensity: 1.2,
            reflectivity: 0.8
        });

        const textGroup = new THREE.Group();
        scene.add(textGroup);

        const outerSnakeGroup = new THREE.Group();
        scene.add(outerSnakeGroup);

        const innerSnakeGroup = new THREE.Group();
        scene.add(innerSnakeGroup);

        const scanLineGroup = new THREE.Group();
        scene.add(scanLineGroup);

        // Jelly effect variables
        const raycaster = new THREE.Raycaster();
        const mouseVector = new THREE.Vector2();
        let isHoveringText = false;
        let jellyWaves = [];
        let mainTextMesh = null;

        const fontLoader = new FontLoader();
        fontLoader.load('https://cdn.jsdelivr.net/npm/three@0.160.0/examples/fonts/helvetiker_bold.typeface.json', function (font) {
            const mainTextGeometry = new TextGeometry('QuizoFun', {
                font: font, size: 2.2, height: 0.6, curveSegments: 32,
                bevelEnabled: true, bevelThickness: 0.1, bevelSize: 0.06, bevelSegments: 16
            });
            mainTextGeometry.center();
            mainTextMesh = new THREE.Mesh(mainTextGeometry, textMaterial);
            mainTextMesh.position.y = 0.8;
            mainTextMesh.castShadow = true;
            mainTextMesh.receiveShadow = true;
            textGroup.add(mainTextMesh);
            
            // Store original positions for jelly effect
            const positionAttribute = mainTextGeometry.attributes.position;
            const originalPositions = new Float32Array(positionAttribute.array);
            mainTextMesh.userData.originalPositions = originalPositions;
            mainTextMesh.userData.geometry = mainTextGeometry;
            
            document.getElementById('loadingOverlay').classList.add('hidden');
        });

        function createCross(scale = 1) {
            const crossContainer = new THREE.Group();
            const barThickness = 0.08 * scale;
            const barLength = 0.4 * scale;
            const horizontalBar = new THREE.BoxGeometry(barLength, barThickness, barThickness);
            const verticalBar = new THREE.BoxGeometry(barThickness, barLength, barThickness);
            const crossMaterial = new THREE.MeshPhysicalMaterial({
                color: 0xeeeeee, metalness: 0.4, roughness: 0.2,
                emissive: 0xffffff, emissiveIntensity: 0.1, clearcoat: 0.6
            });
            const hBar = new THREE.Mesh(horizontalBar, crossMaterial);
            const vBar = new THREE.Mesh(verticalBar, crossMaterial);
            hBar.castShadow = true;
            vBar.castShadow = true;
            crossContainer.add(hBar);
            crossContainer.add(vBar);
            return crossContainer;
        }

        // Remove the ring creation code - rings removed
        const scanCrosses = [], numScanCrosses = 25;
        for (let i = 0; i < numScanCrosses; i++) {
            const cross = createCross(0.4);
            cross.visible = false;
            scanLineGroup.add(cross);
            scanCrosses.push(cross);
        }

        const mouse = { x: 0, y: 0 };
        const targetRotation = { x: 0, y: 0 };
        const currentRotation = { x: 0, y: 0 };

        window.addEventListener('mousemove', (event) => {
            mouse.x = (event.clientX / window.innerWidth) * 2 - 1;
            mouse.y = -(event.clientY / window.innerHeight) * 2 + 1;
            targetRotation.y = mouse.x * 0.12;
            targetRotation.x = mouse.y * 0.08;
            
            // Update mouse vector for raycasting
            mouseVector.x = mouse.x;
            mouseVector.y = mouse.y;
        });

        // Click to trigger jelly effect
        window.addEventListener('click', () => {
            if (isHoveringText && mainTextMesh) {
                jellyWaves.push({
                    time: 0,
                    duration: 2.0,
                    amplitude: 0.5,
                    frequency: 2.5
                });
            }
        });

        let scrollProgress = 0, targetScrollOuter = 0, currentScrollOuter = 0;
        let targetScrollInner = 0, currentScrollInner = 0, scanProgress = 0;

        window.addEventListener('scroll', () => {
            const maxScroll = document.body.scrollHeight - window.innerHeight;
            scrollProgress = window.scrollY / maxScroll;
            scanProgress = scrollProgress;
        });

        function lerp(start, end, factor) {
            return start + (end - start) * factor;
        }

        // Jelly effect function
        function applyJellyEffect() {
            if (!mainTextMesh || !mainTextMesh.userData.geometry) return;

            const geometry = mainTextMesh.userData.geometry;
            const positionAttribute = geometry.attributes.position;
            const originalPositions = mainTextMesh.userData.originalPositions;

            if (!originalPositions) return;

            // Reset to original positions
            for (let i = 0; i < positionAttribute.count; i++) {
                positionAttribute.setXYZ(
                    i,
                    originalPositions[i * 3],
                    originalPositions[i * 3 + 1],
                    originalPositions[i * 3 + 2]
                );
            }

            // Remove completed waves
            jellyWaves = jellyWaves.filter(wave => wave.time < wave.duration);

            // Apply all active waves
            jellyWaves.forEach(wave => {
                const progress = wave.time / wave.duration;
                const decay = Math.pow(1 - progress, 2);

                for (let i = 0; i < positionAttribute.count; i++) {
                    const x = originalPositions[i * 3];
                    const y = originalPositions[i * 3 + 1];
                    const z = originalPositions[i * 3 + 2];

                    // Create wave effect
                    const distance = Math.sqrt(x * x + y * y);
                    const wavePhase = distance * wave.frequency - wave.time * 6;
                    const waveOffset = Math.sin(wavePhase) * wave.amplitude * decay;
                    
                    // Apply deformation
                    const angle = Math.atan2(y, x);
                    const deformX = Math.cos(angle) * waveOffset;
                    const deformY = Math.sin(angle) * waveOffset;
                    const deformZ = waveOffset * 0.6;

                    const currentX = positionAttribute.getX(i);
                    const currentY = positionAttribute.getY(i);
                    const currentZ = positionAttribute.getZ(i);

                    positionAttribute.setXYZ(
                        i,
                        currentX + deformX,
                        currentY + deformY,
                        currentZ + deformZ
                    );
                }

                wave.time += 0.016;
            });

            if (jellyWaves.length > 0) {
                positionAttribute.needsUpdate = true;
                geometry.computeVertexNormals();
            }
        }

        // Check if mouse is hovering over text
        function checkTextHover() {
            if (!mainTextMesh) return;

            raycaster.setFromCamera(mouseVector, camera);
            const intersects = raycaster.intersectObject(mainTextMesh);
            
            const wasHovering = isHoveringText;
            isHoveringText = intersects.length > 0;

            if (isHoveringText) {
                document.body.style.cursor = 'pointer';
                if (!wasHovering) {
                    jellyWaves.push({
                        time: 0,
                        duration: 1.0,
                        amplitude: 0.15,
                        frequency: 4
                    });
                }
            } else {
                document.body.style.cursor = 'default';
            }
        }

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
            composer.setSize(window.innerWidth, window.innerHeight);
        });

        let time = 0;
        function animate() {
            requestAnimationFrame(animate);
            time += 0.01;

            // Rings removed - no rotation needed

            currentRotation.x = lerp(currentRotation.x, targetRotation.x, 0.05);
            currentRotation.y = lerp(currentRotation.y, targetRotation.y, 0.05);
            textGroup.rotation.y = currentRotation.y * 0.3;
            textGroup.rotation.x = currentRotation.x * 0.3;

            // Apply jelly effect
            applyJellyEffect();
            checkTextHover();

            // Scanning line removed

            keyLight.intensity = 150 + Math.sin(time * 1.2) * 10;
            composer.render();
        }

        animate();

        // Scroll animation for rules cards
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const delay = entry.target.dataset.delay || 0;
                    setTimeout(() => {
                        entry.target.classList.add('visible');
                    }, delay);
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.rule-card, .difficulty-card').forEach(card => {
            observer.observe(card);
        });
    </script>
