    <style>
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Hero Section - Full Screen */
        .hero-section {
            position: relative;
            height: 100vh;
            width: 100%;
            overflow: hidden;
        }

        #canvas-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 2rem;
        }

        .hero-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 100;
        }

        .hero-nav-links {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .hero-nav .glass-btn {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 0.8rem 1.5rem;
            border-radius: 50px;
            color: #fff;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .hero-nav .glass-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        /* Mobile Menu Button */
        #menu-open-btn {
            display: none;
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            cursor: pointer;
            z-index: 1001;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            padding: 0.5rem;
            border-radius: 10px;
            transition: all 0.3s ease;
            width: 50px;
            height: 50px;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 5px;
            border: none;
            outline: none;
        }

        #menu-open-btn span {
            display: block;
            width: 25px;
            height: 3px;
            background: white;
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        #menu-open-btn.active span:nth-child(1) {
            transform: rotate(45deg) translate(7px, 7px);
        }

        #menu-open-btn.active span:nth-child(2) {
            opacity: 0;
        }

        #menu-open-btn.active span:nth-child(3) {
            transform: rotate(-45deg) translate(7px, -7px);
        }

        #menu-open-btn:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: scale(1.05);
        }

        #menu-open-btn:active {
            transform: scale(0.95);
        }

        /* Mobile Navbar */
        .navbar {
            position: fixed;
            top: 0;
            right: -100%;
            width: 280px;
            height: 100vh;
            background: rgba(26, 26, 46, 0.98);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-left: 1px solid rgba(255, 255, 255, 0.2);
            z-index: 1000;
            transition: right 0.3s ease;
            padding: 5rem 2rem 2rem;
            box-shadow: -5px 0 20px rgba(0, 0, 0, 0.3);
            overflow-y: auto;
        }

        .navbar.show {
            right: 0 !important;
        }

        .navbar-links {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .navbar-links a {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            color: white;
            text-decoration: none;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .navbar-links a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateX(-5px);
        }

        /* Mobile Overlay */
        .mobile-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .mobile-overlay.show {
            display: block;
            opacity: 1;
        }

        .hero-cta {
            text-align: center;
            margin-bottom: 4rem;
        }

        .hero-title {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .cta-buttons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .cta-btn {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            padding: 1.2rem 2.5rem;
            border-radius: 50px;
            color: #fff;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.4s ease;
            cursor: pointer;
            border: none;
        }

        .cta-btn:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: translateY(-3px);
        }

        .cta-btn.primary {
            background: rgba(76, 175, 80, 0.4);
            border: 2px solid rgba(76, 175, 80, 0.6);
        }

        .cta-btn.secondary {
            background: rgba(255, 193, 7, 0.4);
            border: 2px solid rgba(255, 193, 7, 0.6);
        }

        .scroll-indicator {
            position: absolute;
            bottom: 2rem;
            left: 50%;
            transform: translateX(-50%);
            color: rgba(255, 255, 255, 0.7);
            text-align: center;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
            40% { transform: translateX(-50%) translateY(-10px); }
            60% { transform: translateX(-50%) translateY(-5px); }
        }

        /* Content Section */
        .content-section {
            position: relative;
            min-height: 100vh;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            padding: 4rem 2rem;
            z-index: 100;
        }

        .content-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section-subtitle {
            text-align: center;
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 3rem;
        }

        .info-banner {
            background: rgba(255, 193, 7, 0.2);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 193, 7, 0.4);
            padding: 1rem 2rem;
            border-radius: 15px;
            color: #fff;
            text-align: center;
            margin-bottom: 2rem;
        }

        /* Hide original elements initially */
        .overlay { display: none; }

        @media (max-width: 768px) {
            .hero-title { font-size: 1rem; }
            .cta-btn { padding: 1rem 2rem; font-size: 1rem; }
            .section-title { font-size: 2rem; }
            
            /* Hide desktop nav, show mobile menu button */
            .hero-nav {
                display: none !important;
            }
            
            #menu-open-btn {
                display: flex !important;
            }
        }

        @media (max-width: 480px) {
            .hero-title { font-size: 0.9rem; }
