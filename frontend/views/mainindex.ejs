  <div class="navbar-links">
      <a href="/logout" id="login-link" class="nav-link">Logout</a>
      <a href="/dashboard" id="dashboard-link" class="nav-link">Dashboard</a>
      <a href="/ranktable" id="ranktable-link" class="nav-link">Rank Table</a>
